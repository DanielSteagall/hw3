<h1><%= @place.name %></h1>

<h2>Posts</h2>
<ul>
    <% for post in @place.posts %>
        <li><%= post.title%></li>
        <li><%= post.description%></li>
        <li><%= post.posted_on%></li>
    <% end %>
</ul>

<p>
    <a href="/posts/new?place_id=<% @place.id %>">Create a new post</a>
</p>

<p>
    <a href="/places">Go back to all places</a>
</p>